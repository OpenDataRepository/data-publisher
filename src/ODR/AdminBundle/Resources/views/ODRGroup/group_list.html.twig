{% spaceless %}

    <div id="ODRGroupList" class="pure-u-lg-1-3 pure-u-md-1-2">

        <div class="pure-u-1" style="padding-top:15px">
            <div class="pure-u-1">
                <span class="FLeft">
                    <b>Default Groups</b>
                </span>
            </div>
            <div class="pure-u-1-24"></div>
            <div class="pure-u-23-24">
                {% set count = 0 %}
                {% for group in group_list %}
                    {% set group_name = group.groupMeta.groupName %}
                    {% if group_name == '' %}
                        {% set group_name = 'group_' ~ group.id %}
                    {% endif %}

                    {% if group.purpose != '' %}
                        {% set count = count + 1 %}
                        <div class="pure-u-1">
                            <span class="FLeft">
                                <i id="edit_group_{{ group.id }}" class="fa fa-lg fa-edit Pointer ODREditGroup" title="Edit Group" rel="{{ group.id }}"></i>
                                <i id="group_members_{{ group.id }}" class="fa fa-lg fa-users Pointer ODRGroupMembers" title="Show which Users are members of this Group" rel="{{ group.id }}"></i>
                            </span>
                            <span id="ODRGroup_{{ group.id }}_name" class="Cursor" style="padding-left:15px;">
                                {{ group_name }}
                            </span>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="pure-u-1" style="padding-top:15px">
            <div class="pure-u-1">
                <span class="FLeft">
                    <i class="Pointer tooltip fa fa-plus-square ODRAddGroup" title="Create new custom Group" rel="table" style="margin-right: 5px;"></i>
                    <b>Custom Groups</b>
                </span>
            </div>
            <div class="pure-u-1-24"></div>
            <div class="pure-u-23-24">
                {% set count = 0 %}
                {% for group in group_list %}
                    {% set group_name = group.groupMeta.groupName %}
                    {% if group_name == '' %}
                        {% set group_name = 'group_' ~ group.id %}
                    {% endif %}

                    {% if group.purpose == '' %}
                        {% set count = count + 1 %}
                        <div class="pure-u-1">
                            <span class="FLeft">
                                <i id="edit_group_{{ group.id }}" class="fa fa-lg fa-edit Pointer ODREditGroup" title="Edit Group" rel="{{ group.id }}"></i>
                                <i id="group_members_{{ group.id }}" class="fa fa-lg fa-users Pointer ODRGroupMembers" title="Show which Users are members of this Group" rel="{{ group.id }}"></i>
                                <i id="delete_group_{{ group.id }}" class="fa fa-lg fa-trash-o Pointer ODRDeleteGroup" title="Delete Group" rel="{{ datatype.id }}"></i>
                            </span>
                            <span class="Cursor ODRGroup_{{ group.id }}_name" style="padding-left:15px;">
                                {{ group_name }}
                            </span>
                        </div>
                    {% endif %}
                {% endfor %}

                {% if count == 0 %}
                        <div class="pure-u-1">
                            <span class="Cursor" style="padding-left:15px; color: red;">
                                No custom Groups exist!
                            </span>
                        </div>
                {% endif %}
            </div>
        </div>

    </div>

    <div id="ODRGroupPropertiesFormDiv" class="pure-u-1-2"></div>

{% endspaceless %}
