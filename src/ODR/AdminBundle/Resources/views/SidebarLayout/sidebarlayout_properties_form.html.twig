{% spaceless %}

{% set datatype = sidebar_layout.dataType %}

{{ form_start(sidebar_layout_form, {
    'method': 'POST',
    'attr': {
        'id': 'SidebarLayoutPropertiesForm',
        'class': 'ODRSidebarLayoutPropertiesForm pure-form pure-form-aligned',
        'rel': datatype.id,
        'action': path('odr_save_sidebar_layout_properties', {'sidebar_layout_id': sidebar_layout.id}),
        'method': 'POST',
    }
}) }}

    <fieldset class="ODRRecord">
        <div class="ODRDataField pure-u-1">
            <label class="ODRFieldLabel" for="{{ sidebar_layout_form.layoutName.vars.id }}">
                <strong>{{ sidebar_layout_form.layoutName.vars.label }}</strong>
            </label>
            <div class="ODRFieldWrapper">
            {{ form_errors(sidebar_layout_form.layoutName) }}
            {{ form_widget(sidebar_layout_form.layoutName, { 'attr': {'class': 'pure-u-1-3', 'style': 'width:auto', 'size': '64', 'maxlength': '64'} }) }}
            </div>
        </div>

        <div class="ODRDataField">
            <label class="ODRFieldLabel" for="{{ sidebar_layout_form.layoutDescription.vars.id }}">
                <strong>{{ sidebar_layout_form.layoutDescription.vars.label }}</strong>
            </label>
            <div class="ODRFieldWrapper">
            {{ form_errors(sidebar_layout_form.layoutDescription) }}
            {{ form_widget(sidebar_layout_form.layoutDescription, { 'attr': {'class': 'pure-u-22-24'} }) }}
            </div>
        </div>

        <div class="ODRDataField">
            <label class="ODRFieldLabel" for="{{ sidebar_layout_form.inverseDataType.vars.id }}">
                {{ sidebar_layout_form.inverseDataType.vars.label }}
                <span class="ODRHelp">
                    <i class="fa fa-lg fa-question-circle Cursor"
                       title="ODR usually tries to do things from the 'top-down'...from 'Ancestor' to 'Descendant' databases.  In rare occasions, there are situations where this behavior should be inverted...but explaining why is difficult, so you typically should leave this set to NONE."></i>
                </span>
            </label>

            <div class="ODRFieldWrapper">
                {{ form_errors(sidebar_layout_form.inverseDataType) }}
                <span class="ODRSelectWrap">
                    {{ form_widget(sidebar_layout_form.inverseDataType, {
                        'attr': {
                            'class': 'pure-u-1 ODRSelect',
                            'data-error-type': 'inline'
                        }
                    }) }}
                </span>
            </div>
        </div>

        {{ form_rest(sidebar_layout_form) }}
    </fieldset>

{{ form_end(sidebar_layout_form) }}

{% endspaceless %}
