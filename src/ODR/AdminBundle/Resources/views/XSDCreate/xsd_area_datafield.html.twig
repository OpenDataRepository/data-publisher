{% spaceless %}

    {% set field_typename = datafield.dataFieldMeta.fieldType.typeName %}

    {% if field_typename == "Boolean" %}
        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}" type="xsd:boolean" />

    {% elseif field_typename == "File" %}
        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}" type="datafield_file_type{% if datafield.dataFieldMeta.allow_multiple_uploads == 0 %}_single{% endif %}" />

    {% elseif field_typename == "Image" %}
        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}" type="datafield_image_type{% if datafield.dataFieldMeta.allow_multiple_uploads == 0 %}_single{% endif %}" />

    {% elseif field_typename == "Integer" %}
        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}" type="xsd:integer" />

    {% elseif field_typename == "Decimal" %}
        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}" type="xsd:decimal" />

    {% elseif field_typename == "Short Text" or field_typename == "Medium Text" or field_typename == "Long Text" or field_typename == "Paragraph Text" %}
        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}" type="xsd:string" />

    {% elseif field_typename == "Single Radio" or field_typename == "Multiple Radio" or field_typename == "Single Select" or field_typename == "Multiple Select" %}

        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}">
            <xsd:complexType>
                <xsd:all>
                {% for radio_option in datafield.radioOptions %}
                    <xsd:element name="{{ radio_option.radioOptionsMeta.xml_optionName }}" type="xsd:boolean" minOccurs="0" />
                {% endfor %}
                </xsd:all>
                {% if field_typename == "Multiple Radio" or field_typename == "Multiple Select" %}
                    <xsd:attribute name="_deselect_unlisted" use="optional" type="xsd:boolean" fixed="false" />
                {% endif %}
            </xsd:complexType>
        </xsd:element>

    {% elseif field_typename == "DateTime" %}
        <xsd:element name="{{ datafield.dataFieldMeta.xml_fieldName }}" type="normal_datetime" />

    {% endif %}

{% endspaceless %}