{% spaceless %}

    {% set field_typename = field.getfieldtype.typename %}
    {% set name_field = field.getdatatype.getnamefield %}

    {% if field_typename == "Boolean" %}
        <xsd:element name="{{ field.getxmlfieldname }}" type="xsd:boolean" />

    {% elseif field_typename == "File" %}
        <xsd:element name="{{ field.getxmlfieldname }}" type="datafield_file_type{% if field.allowmultipleuploads == 0 %}_single{% endif %}" />

    {% elseif field_typename == "Image" %}
        <xsd:element name="{{ field.getxmlfieldname }}" type="datafield_image_type{% if field.allowmultipleuploads == 0 %}_single{% endif %}" />

    {% elseif field_typename == "Integer" %}
        <xsd:element name="{{ field.getxmlfieldname }}" type="xsd:integer" />

    {% elseif field_typename == "Decimal" %}
        <xsd:element name="{{ field.getxmlfieldname }}" type="xsd:decimal" />

    {% elseif field_typename == "Short Text" or field_typename == "Medium Text" or field_typename == "Long Text" or field_typename == "Paragraph Text" %}
        <xsd:element name="{{ field.getxmlfieldname }}" type="xsd:string" />

    {% elseif field_typename == "Single Radio" or field_typename == "Multiple Radio" or field_typename == "Single Select" or field_typename == "Multiple Select" %}

        <xsd:element name="{{ field.getxmlfieldname }}">
            <xsd:complexType>
                <xsd:all>
                {% for radio_option in field.getRadioOptions %}
                    <xsd:element name="{{ radio_option.getxmloptionname }}" type="xsd:boolean" minOccurs="0" />
                {% endfor %}
                </xsd:all>
                {% if field_typename == "Multiple Radio" or field_typename == "Multiple Select" %}
                    <xsd:attribute name="_deselect_unlisted" use="optional" type="xsd:boolean" fixed="false" />
                {% endif %}
            </xsd:complexType>
        </xsd:element>

    {% elseif field_typename == "DateTime" %}
        <xsd:element name="{{ field.getxmlfieldname }}" type="normal_datetime" />

    {% endif %}

{% endspaceless %}