{% spaceless %}

{% set datatype = datatype_array[initial_datatype_id] %}

<?xml version="1.0"?>
<datarecords>
    {% if version == 'v1' %}
    <datarecord datatype_name="{{ datatype.dataTypeMeta.shortName|xml }}">
    {% elseif version == 'v2' %}
    <datarecord datatype_name="{{ datatype.dataTypeMeta.xml_shortName }}">
    {% endif %}

        {% set is_top_level = 1 %}
        {% set is_link = 0 %}

        {# using macro on purpose #}
        {% import "ODRAdminBundle:XMLExport:xml_datarecord_childtype.html.twig" as mychildform %}
        {{ mychildform.input(datatype_array, datarecord_array, theme_id, initial_datatype_id, initial_datarecord_id, is_top_level, is_link, using_metadata, baseurl, version) }}

    </datarecord>
</datarecords>

{% endspaceless %}
