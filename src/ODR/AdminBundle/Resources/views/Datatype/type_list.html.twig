{% spaceless %}
<div class="grid_12">
    <div class="box">
    
        <div class="header">
            {% if section == "design" %}
            <h2>Database Management</h2>
            {% else %}
            <h2>Record Management</h2>
            {% endif %}
        </div>
        
        <div class="content">

            {% if section == "design" %}
                {% include 'ODRAdminBundle:Datatype:type_list_content_design.html.twig' with {'user': user, 'permissions': permissions, 'datatypes': datatypes, 'metadata': metadata } %}
            {% elseif section == "records" %}
                {% include 'ODRAdminBundle:Datatype:type_list_content_records.html.twig' with {'user': user, 'permissions': permissions, 'datatypes': datatypes, 'metadata': metadata } %}
            {% endif %}
            
        </div><!-- End of .content -->
        
    </div><!-- End of .box -->
</div><!-- End of .grid_12 -->
{% endspaceless %}
