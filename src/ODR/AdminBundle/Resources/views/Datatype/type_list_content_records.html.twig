{% if hidden_datatype_count != 0 %}
    function redoRowClasses() {
        var count = 0;
        $("#ODRDatatypeList tr").each(function() {
            if ( !$(this).hasClass('ODRHidden') ) {
                count++;
                if ( count % 2 == 0 )
                    $(this).removeClass('odd').addClass('even');
                else
                    $(this).removeClass('even').addClass('odd');
            }
        });
    }
{% endif %}
</script>

{% endspaceless %}
