{% spaceless %}

{% set datatype = theme.dataType %}

{{ form_start(theme_form, {
    'method': 'POST',
    'attr': {
        'id': 'ThemePropertiesForm',
        'class': 'ODRThemePropertiesForm pure-form pure-form-aligned',
        'rel': datatype.id,
        'action': path('odr_save_theme_properties', {'theme_id': theme.id}),
        'method': 'POST',
    }
}) }}

    <fieldset class="ODRRecord">
        <div class="ODRDataField pure-u-1">
            <label class="ODRFieldLabel" for="{{ theme_form.templateName.vars.id }}">
                <strong>{{ theme_form.templateName.vars.label }}</strong>
            </label>
            <div class="ODRFieldWrapper">
            {{ form_errors(theme_form.templateName) }}
            {{ form_widget(theme_form.templateName, { 'attr': {'class': 'pure-u-1-3', 'style': 'width:auto'} }) }}
            </div>
        </div>

        <div class="ODRDataField">
            <label class="ODRFieldLabel" for="{{ theme_form.templateDescription.vars.id }}">
                <strong>{{ theme_form.templateDescription.vars.label }}</strong>
            </label>
            <div class="ODRFieldWrapper">
            {{ form_errors(theme_form.templateDescription) }}
            {{ form_widget(theme_form.templateDescription, { 'attr': {'class': 'pure-u-22-24'} }) }}
            </div>
        </div>

        {% if is_short_form %}
        <div class="ODRDataField pure-u-1">
            <label class="ODRFieldLabel" for="{{ theme_form.isTableTheme.vars.id }}">
                <strong>{{ theme_form.isTableTheme.vars.label }}&nbsp;&nbsp;</strong>
            </label>
            {#<div class="ODRFieldWrapper">#}
                {{ form_errors(theme_form.isTableTheme) }}
                {{ form_widget(theme_form.isTableTheme, { 'attr': {'class': 'pure-u-1-3', 'style': 'width:auto'} }) }}
            {#</div>#}
        </div>

        <div class="ODRDataField pure-u-1">
            <label class="ODRFieldLabel" for="{{ theme_form.displaysAllResults.vars.id }}">
                <strong>{{ theme_form.displaysAllResults.vars.label }}&nbsp;&nbsp;</strong>
            </label>
            {#<div class="ODRFieldWrapper">#}
                {{ form_errors(theme_form.displaysAllResults) }}
                {{ form_widget(theme_form.displaysAllResults, { 'attr': {'class': 'pure-u-1-3', 'style': 'width:auto'} }) }}
            {#</div>#}
            </div>
        {% endif %}

        <div>
        {{ form_rest(theme_form) }}
        </div>
    </fieldset>

{{ form_end(theme_form) }}
{% endspaceless %}
