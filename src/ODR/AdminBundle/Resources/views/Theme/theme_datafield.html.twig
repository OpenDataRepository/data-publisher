{% spaceless %}

{% set field_typename = datafield.dataFieldMeta.fieldType.typeName %}

{% set prevent_datafield_use = 0 %}
{% if target_themetype == 'table' %}
    {% if field_typename == 'Markdown' or field_typename == 'Multiple Radio' or field_typename == 'Multiple Select' %}
        {% set prevent_datafield_use = 1 %}
    {% elseif field_typename == 'File' and datafield.dataFieldMeta.allow_multiple_uploads == 1 %}
        {% set prevent_datafield_use = 1 %}
    {% elseif field_typename == 'Image' %}
        {% set prevent_datafield_use = 1 %}
    {% endif %}
{% endif %}

<div class="ODRDataField pure-u-1 pure-u-md-{{ theme_datafield.cssWidthMed }} pure-u-xl-{{ theme_datafield.cssWidthXL }}{% if theme.themeType == 'table' %} ODRTableThemeDatafield{% endif %}" id="Field_{{ datafield.id }}{{ id_suffix }}">
{% if theme.themeType == 'master' %}
    <div id="Field_{{ datafield.id }}_overlay" class="ODROverlayDiv {% if is_top_level == 0 or prevent_datafield_use == 1 %}ODRInvalidDatafield{% else %}Pointer ODRDetachedDatafield{% endif %}" rel="{{ datafield.id }}"></div>
{% endif %}

<form id="Form_DataField_{{ datafield.id }}{{ id_suffix }}" class="pure-u-1">

    {% if field_typename == "Boolean" %}
    <fieldset>
        <label id="Label_{{ datafield.id }}{{ id_suffix }}" for="Input_{{ datafield.id }}" class="ODRFieldLabel pure-u-1" style="margin:0.5em 0;">
            <input type="checkbox" name="">
            {{ datafield.dataFieldMeta.fieldName }}
        </label>
    </fieldset>

    {% elseif field_typename == "File" %}
    <fieldset>
        <div class="pure-u-1" style="cursor:default;">
            <table class="ODRTable pure-u-1">
                <thead class="pure-u-1">
                    <tr class="pure-u-1">
                        <th class="pure-u-1-24">&nbsp;</th>
                        <th id="Label_{{ datafield.id }}{{ id_suffix }}" class="pure-u-20-24">{{ datafield.dataFieldMeta.fieldName }}</th>
                        <th class="pure-u-3-24">Options</th>
                    </tr>
                </thead>
                <tbody class="pure-u-1">
                    <tr class="pure-u-1">
                        <td class="pure-u-1-24">&nbsp;</td>
                        <td class="pure-u-20-24">file_name_here</td>
                        <td class="pure-u-3-24">
                            <i class="Cursor tooltip fa fa-globe fa-lg ODRPublicFile" title="Public since [YYYY-MM-DD]"></i>
                            <i class="Cursor tooltip fa fa-calendar fa-lg" title="Uploaded [YYYY-MM-DD] by John Doe"></i>
                            {#<i class="Pointer tooltip fa fa-trash-o fa-lg ODRDeleteFile" title="Delete File" rel="{{ datafield.id }}"></i>#}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </fieldset>

    {% elseif field_typename == "Image" %}
    <fieldset>
        <label id="Label_{{ datafield.id }}{{ id_suffix }}" class="ODRFieldLabel pure-u-1" title="{{ datafield.dataFieldMeta.description }}">{{ datafield.dataFieldMeta.fieldName }}</label>
        <div class="pure-u-1">
            {#<div class="pure-u-1">&nbsp;<i class="ODRDeleteImage Pointer fa fa-lg fa-trash-o" title="Delete Image"></i>&nbsp;<i class="PublicImage Pointer fa fa-lg fa-globe"></i>&nbsp;</div>#}
            <div class="pure-u-1">
                {#<img class="pure-img" src="/img/_demo/_tmb/1.jpg" />#}
                <img class="pure-img" src="/img/blank.jpg" />
            </div>
        </div>
    </fieldset>

    {% elseif field_typename == "Integer" or field_typename == "Decimal" or field_typename == "Paragraph Text" or field_typename == "Long Text" or field_typename == "Medium Text" or field_typename == "Short Text" %}
    <fieldset>
        <label id="Label_{{ datafield.id }}{{ id_suffix }}" for="Input_{{ datafield.id }}{{ id_suffix }}" class="ODRFieldLabel">{{ datafield.dataFieldMeta.fieldName }}</label>
        <div class="ODRPseudoField" id="Input_{{ datafield.id }}{{ id_suffix }}"></div>
    </fieldset>

    {% elseif field_typename == "Single Radio" or field_typename == "Multiple Radio" %}
    <fieldset>
        <span class="pure-u-1">
            <label id="Label_{{ datafield.id }}{{ id_suffix }}" class="ODRFieldLabel" title="{{ datafield.dataFieldMeta.description }}">{{ datafield.dataFieldMeta.fieldName }}</label>
        </span>

        {% if datafield.radioOptions is defined %}
            {% for radio_option in datafield.radioOptions %}
                <label id="Option_{{ radio_option.id }}{{ id_suffix }}" for="Option_object_{{ radio_option.id }}{{ id_suffix }}" class="pure-u-1 pure-u-md-1-{{ datafield.dataFieldMeta.children_per_row }}" style="margin: 0.5em 0;">

                {% if field_typename == "Single Radio" %}
                    <input id="Option_object_{{ radio_option.id }}{{ id_suffix }}" type="radio" name="RadioGroup_{{ datafield.id }}" class="SingleRadioGroup" disabled />
                {% else %}
                    <input id="Option_object_{{ radio_option.id }}{{ id_suffix }}" type="checkbox" name="RadioGroup_{{ datafield.id }}" class="MultipleRadioGroup" disabled />
                {% endif %}

                <span id="Option_{{ radio_option.id }}_name{{ id_suffix }}">{{ radio_option.radioOptionMeta.optionName }}</span>
                </label>
            {% endfor %}
        {% endif %}
    </fieldset>

    {% elseif field_typename == "Single Select" or field_typename == "Multiple Select" %}
    <fieldset>
        <span class="pure-u-1">
            <label id="Label_{{ datafield.id }}{{ id_suffix }}" class="ODRFieldLabel" title="{{ datafield.dataFieldMeta.description }}">{{ datafield.dataFieldMeta.fieldName }}</label>
        </span>
        <select id="SelectGroup_{{ datafield.id }}{{ id_suffix }}" class="{% if field_typename == "Multiple Select" %}MultipleSelectGroup{% else %}SingleSelectGroup{% endif %}" {% if field_typename == "Multiple Select" %}multiple{% endif %}>

        {% if datafield.radioOptions is defined %}
            {% if field_typename == "Single Select" %}
                <option id="Option_0{{ id_suffix }}" value="0">Select an Option</option>
            {% endif %}

            {% for radio_option in datafield.radioOptions %}
                <option id="Option_{{ radio_option.id }}{{ id_suffix }}" value="{{ radio_option.id}}">{{ radio_option.radioOptionMeta.optionName }}</option>
            {% endfor %}
        {% endif %}
        </select>
    </fieldset>

    {% elseif field_typename == "DateTime" %}
    <fieldset>
        <label id="Label_{{ datafield.id }}{{ id_suffix }}" for="Input_{{ datafield.id }}{{ id_suffix }}" class="ODRFieldLabel">{{ datafield.dataFieldMeta.fieldName }}</label>
        <div class="ODRPseudoField" id="Input_{{ datafield.id }}{{ id_suffix }}">
            <input type="text" name="" class="ODRDatePicker" style="width: 100%" readonly />
        </div>
        <div style="margin-bottom:5px;"><label class="ODRDatePicker_clear"><u>Clear Date</u></label></div>
    </fieldset>

    {% elseif field_typename == "Markdown" %}
        {% include 'ODRAdminBundle:Display:display_markdown.html.twig' with {'datafield': datafield} %}

    {% endif %}

</form>

</div><!-- End of #Field_{{ datafield.id }}{{ id_suffix }} -->
{% endspaceless %}
