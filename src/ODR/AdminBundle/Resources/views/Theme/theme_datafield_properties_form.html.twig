{% spaceless %}

<div class="pure-u-3-4" style="visibility: hidden;">
    <label id="saved" style="margin: 10px; float: right; color: black; font-size:1.25em;"><strong>SAVED</strong></label></br>
</div>

{{ form_start(theme_datafield_form, {
    'method': 'POST',
    'attr': {
        'id': 'ThemeDatafieldPropertiesForm_' ~ theme_datafield.id,
        'class': 'ODRThemeDatafieldPropertiesForm pure-form pure-form-aligned'
    }
}) }}

    <fieldset>
        {% if datafield_name is defined %}
            <div class="pure-control-group">
                <h3>{{ datafield_name }}</h3>
            </div>
        {% endif %}

        <div class="pure-control-group">
            <label for="{{ theme_datafield_form.cssWidthMed.vars.id }}">
                <strong>{{ theme_datafield_form.cssWidthMed.vars.label }}</strong>
            </label>
            {{ form_errors(theme_datafield_form.cssWidthMed) }}
            {{ form_widget(theme_datafield_form.cssWidthMed, { 'attr': {'style': 'width:auto'} }) }}
        </div>

        <div class="pure-control-group">
            <label for="{{ theme_datafield_form.cssWidthXL.vars.id }}">
                <strong>{{ theme_datafield_form.cssWidthXL.vars.label }}</strong>
            </label>
            {{ form_errors(theme_datafield_form.cssWidthXL) }}
            {{ form_widget(theme_datafield_form.cssWidthXL, { 'attr': {'style': 'width:auto'} }) }}
        </div>

        <div style="display: none">
        {{ form_rest(theme_datafield_form) }}
        </div>
    </fieldset>

{{ form_end(theme_datafield_form) }}

{% endspaceless %}
