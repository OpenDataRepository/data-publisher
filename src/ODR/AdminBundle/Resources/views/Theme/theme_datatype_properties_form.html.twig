{% spaceless %}

<div class="pure-u-3-4" style="visibility: hidden;">
    <label id="saved" style="margin: 10px; float: right; color: black; font-size:1.25em;"><strong>SAVED</strong></label></br>
</div>

{{ form_start(theme_datatype_form, {
    'method': 'POST',
    'attr': {
        'id': 'ThemeDatafieldPropertiesForm_' ~ theme_datatype.id,
        'class': 'ODRThemeDatatypePropertiesForm pure-form pure-form-aligned'
    }
}) }}

    <fieldset>
        <div class="pure-control-group">
            <label for="{{ theme_datatype_form.display_type.vars.id }}">
