{% spaceless %}
    {% if is_top_level == 0 and display_type == 0 %}     {# accordion display_type...unlike edit page, don't want list display_type (3) here as well #}
        <h3 class="ui-accordion-header ui-helper-reset ui-state-default ui-state-active" role="tab" aria-expanded="true" aria-selected="true" tabindex="0">
            <span class="ui-icon ui-icon-triangle-1-s"></span>

        {% if datarecord.nameField_value != datarecord.id %}
            <a>{{ datarecord.nameField_value }}</a>
        {% else %}
            <a>{{ datatype.dataTypeMeta.shortName }}</a>
        {% endif %}

            <span class="DatatypeTools">
                {% if is_link == 1 %}
                    <span style="margin-left: 15px;" title="This is a linked Datatype">
                        <i class="fa fa-link Cursor"></i>
                    </span>
                {% endif %}

                {% if datarecord.id != datarecord.grandparent.id %}
                    <span rel="{{ datatype.id }}">
                        <i id="datarecord_{{ datarecord.id }}_public" class="tooltip fa fa-globe
                            {% if datarecord.dataRecordMeta.publicDate|is_public %}
                                ODRActiveIcon
                            {% endif %} Cursor"
                           title="{% if is_link == 1 %}Linked{% else %}Child{% endif %} Record is {% if not datarecord.dataRecordMeta.publicDate|is_public %}not {% endif %}Public" rel="{{ datarecord.id }}"></i>
                    </span>
                {% endif %}
            </span>
        </h3>
    {% endif %}

    {# tabbed and dropdown display_type have already been handled in Default::fieldarea_header.html.twig #}

{% endspaceless %}