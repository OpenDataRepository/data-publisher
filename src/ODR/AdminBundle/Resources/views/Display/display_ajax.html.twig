{% if record_display_view == "single" %}
<script>

    var record_datatype_id = {{ datatype.id }};
    var record_theme_id = {{ theme_id }};
    function initPage() {

        // TODO What is this for?
        // Resize all elements dependent on window size
        $(window).unbind('resize').resize(function() {
