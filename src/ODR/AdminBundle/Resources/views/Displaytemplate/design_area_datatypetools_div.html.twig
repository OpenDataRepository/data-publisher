{% spaceless %}

    {% set datatype_id = datatype.id %}

    {# Convert this to JSON Data so we can use it in the toolbox #}
    <script>
        if (datatype_properties === undefined) {
            var datatype_properties = [];
            // var datatype_properties = {};
        }

        datatype_properties[{{ datatype_id }}] = {};
        datatype_properties[{{ datatype_id }}].is_top_level = {{ is_top_level }};
        datatype_properties[{{ datatype_id }}].is_link = {{ is_link }};

        {% if datatype.dataTypeMeta.publicDate|is_public %}
        datatype_properties[{{ datatype_id }}].is_public = 1;
        {% else %}
        datatype_properties[{{ datatype_id }}].is_public = 0;
        {% endif %}

        {% if datatype.dataTypeMeta.renderPlugin.id != 1 %}
        datatype_properties[{{ datatype_id }}].render_plugin_id = {{ datatype.dataTypeMeta.renderPlugin.id }};
        datatype_properties[{{ datatype_id }}].render_plugin_name = "{{ datatype.dataTypeMeta.renderPlugin.pluginName }}";
        {% else %}
        datatype_properties[{{ datatype_id }}].render_plugin_id = 1;
        datatype_properties[{{ datatype_id }}].render_plugin_name = "Default Render";
        {% endif %}

        {#console.log('datatype ' + {{ datatype_id }});#}
        {#console.log( datatype_properties );#}
        console.log(datatype_properties[{{ datatype_id }}]);
    </script>
{% endspaceless %}
