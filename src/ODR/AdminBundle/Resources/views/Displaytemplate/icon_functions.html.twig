<script>

function setDatatypeIcons(id, icons) {
    $.each(icons, function(key, value) {
//alert('key: ' + key + ' value: ' + value);
        var icon = $("#ThemeDesignForm").find("." + key);

        // Currently, only render plugin and public datatype icons change
        if (key == "ODRRenderPlugin") {
/*
            if (value == -1) {
                $(icon).addClass('fa-muted').removeClass('ODRActiveIcon');
                $(icon).attr('title', "Can't set RenderPlugin due to child Datatype");
            }
            else if (value == 0) {
*/
            if (value == 0) {
                $(icon).removeClass('fa-muted ODRActiveIcon');
                $(icon).attr('title', "RenderPlugin Settings");
            }
            else {
                $(icon).removeClass('fa-muted').addClass('ODRActiveIcon');
                $(icon).attr('title', "RenderPlugin Settings (using " + value + ")");
            }
        }
        else if (key == "ODRPublicDatatype") {
            if (value == 1) {
                $(icon).addClass('ODRActiveIcon');
                $(icon).attr('title', "Datatype does not require permission to view");
            }
            else if (value == 0) {
                $(icon).removeClass('ODRActiveIcon');
                $(icon).attr('title', "Datatype requires permission to view");
            }
        }
    });
}

function setThemeElementIcons(id, icons) {
    $.each(icons, function(key, value) {
        var icon = $("#ThemeElementTools_" + id).find("." + key);

        //
        if (key == "ODRAddDatafield"
            || key == "ODRAddChildtype"
            || key == "ODRLinkDatatype"
            || key == "ODRDeleteThemeElement"
        ) {
            if (value == 1)
                $(icon).removeClass('fa-muted').removeClass('ODRActiveIcon');
            else if (value == 0)
                $(icon).addClass('fa-muted').removeClass('ODRActiveIcon');
        }
    });
}

</script>
