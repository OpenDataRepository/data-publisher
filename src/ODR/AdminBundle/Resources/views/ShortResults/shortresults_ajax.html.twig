{% spaceless %}

{% for dr_id, datarecord in datarecord_array %}
    {% if datarecord.dataType.id == initial_datatype_id %}
    <div class="ODRShortResults pure-u-1">
        {% include 'ODRAdminBundle:ShortResults:shortresults_childtype.html.twig' with {
            'datatype_array': datatype_array,
            'datarecord_array': datarecord_array,
            'theme_id': theme_id,

            'target_datatype_id': initial_datatype_id,
            'target_datarecord_id': datarecord.id,
        } %}
    </div>
    {% endif %}
{% endfor %}

{% endspaceless %}
