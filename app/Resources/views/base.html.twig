        });

        function toggleHorizontal() {
            [].forEach.call(
                document.getElementById('ODRMainMenu').querySelectorAll('.odr-custom-can-transform'),
                function(el){
                    console.log('toggle horizontal interior');
                    el.classList.toggle('pure-menu-horizontal');
                }
            );
