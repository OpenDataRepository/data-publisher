<section id="toolbar" class="pure-form pure-g">

    <div class="pure-u-1 pure-u-md-23-24">
            <span class="ODRMenuLeft pure-menu pure-menu-open pure-menu-horizontal">
                <ul>
    {% if use_navigation_block == true %}
        <!-- The container of the sidebar and content box -->
        <!-- The sidebar -->
        <li tabindex="0" id="ODRNavWrapper"><i title="menu" class="fa fa-bars Pointer" onclick="jQuery('#ODRNav').toggle()"></i>
            <div id="ODRNav">
                <div id="ODRMenuLabel">tap an option or the <i class="fa fa-bars"></i>&nbsp; icon to close</div>
                <div class="top">
                    <!-- Navigation -->
                    {% block navigation_top %}
                    {% endblock %}
                </div><!-- End of .top -->
                {#
                                {% block navigation_bottom %}
                                {% endblock %}
                #}
            </div>

        </li><!-- End of sidebar -->
    {% endif %}
                    {% if header_left_title != '' %}
                        <li><a class="pure-button" href="{{ header_left_path }}">{{ header_left_title }}</a></li>
                    {% endif %}
                    {% if header_middle_title != '' %}
                        <li><a class="pure-button" href="{{ header_middle_path }}">{{ header_middle_title }}</a></li>
                    {% endif %}
                </ul>
            </span>
        <span class="ODRMenuRight pure-menu pure-menu-open pure-menu-horizontal">
                <ul>
                {% if current_user != '' %}
                    <li class="pure-hidden-xs pure-hidden-sm">{{ current_user }}&nbsp;&nbsp;&nbsp;</li>
                {% endif %}
                    {% if header_right_title != '' %}
                        <li><a class="pure-button" {% if header_right_path != '' %}href="{{ header_right_path }}"{% endif %} {% if header_right_js != '' %}onclick="{{ header_right_js }}"{% endif %}>{{ header_right_title }}</a></li>
                    {% endif %}
                </ul>
            </span>
    </div>
</section><!-- End of #toolbar -->


